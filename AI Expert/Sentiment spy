import colorama
from colorama import Fore, Style
from textblob import TextBlob

# Initialize colorama for colored output
colorama.init()

# Prompts for the start of the program
print(f"{Fore.CYAN}ðŸ‘‹ Welcome to Sentiment Spy! {Style.RESET_ALL}")

user_name = input(f"{Fore.MAGENTA}Please enter your name: {Style.RESET_ALL} ").strip()
if not user_name:
    user_name = "Mystery Agent"  # Fallback if user doesn't provide a name

# Store conversation as a list of tuples: (text, polarity, sentiment_type)
conversation_history = []

print(f"\n{Fore.CYAN}Hello, Agent {user_name}!")
print("Type a sentence and I will analyze your sentiments with TextBlob and show you the sentiment. ")
print(f"{Fore.YELLOW}Type 'reset' to clear the conversation history. {Fore.CYAN}")
print(f"{Fore.YELLOW}Type 'exit' to quit.{Style.RESET_ALL}\n")

while True:
    user_input = input(f"{Fore.GREEN}>> {Style.RESET_ALL}").strip()

    if not user_input:
        print(f"{Fore.RED}Please enter some text or a valid command.{Style.RESET_ALL}")
        continue

    # Check for commands
    if user_input.lower() == "exit":
        print(f"{Fore.BLUE}ðŸ‘‹ Exiting Sentiment Spy. Farewell, Agent {user_name}!{Style.RESET_ALL}")
        break

    elif user_input.lower() == "reset":
        conversation_history = []
        print(f"{Fore.CYAN}ðŸ§¹ All conversation history cleared!{Style.RESET_ALL}")
        continue

    elif user_input.lower() == "history":
        if not conversation_history:
            print(f"{Fore.YELLOW}âš ï¸ No conversation history yet.{Style.RESET_ALL}")
        else:
            print(f"{Fore.YELLOW}ðŸ“œ Conversation History:{Style.RESET_ALL}")
            for i, (text, sentiment, sentiment_type) in enumerate(conversation_history, start=1):
                print(f"{i}. {text} => {sentiment_type} ({sentiment:.2f})")
        continue

    # Sentiment analysis using TextBlob
    analysis = TextBlob(user_input)
    polarity = analysis.sentiment.polarity

    if polarity > 0:
        sentiment_type = "Positive"
        color = Fore.GREEN
        emoji = "ðŸ˜Š"
    elif polarity < 0:
        sentiment_type = "Negative"
        color = Fore.RED
        emoji = "ðŸ˜ž"
    else:
        sentiment_type = "Neutral"
        color = Fore.YELLOW
        emoji = "ðŸ˜"

    # Store in history
    conversation_history.append((user_input, polarity, sentiment_type))

    # Print result with color, emojis, and polarity
    print(f"{color}{emoji} {sentiment_type} sentiment detected! "
          f"(Polarity: {polarity:.2f}){Style.RESET_ALL}")
